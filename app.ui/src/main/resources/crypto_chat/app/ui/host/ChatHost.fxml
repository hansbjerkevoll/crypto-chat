<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="750.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="10.0">
         <children>
            <Label text="External IP-address:">
               <HBox.margin>
                  <Insets top="4.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="serverIPField" alignment="CENTER_RIGHT" editable="false" prefWidth="100.0" text="127.0.0.1" />
            <Label text="Port:">
               <HBox.margin>
                  <Insets top="4.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="serverPortField" alignment="CENTER_RIGHT" editable="false" prefWidth="100.0" text="27567" />
            <Label text="Password (hover to show):">
               <HBox.margin>
                  <Insets top="4.0" />
               </HBox.margin>
            </Label>
            <PasswordField fx:id="serverHiddenPassword" alignment="CENTER_RIGHT" editable="false" prefWidth="100.0" text="password" />
            <TextField fx:id="serverShownPassword" alignment="CENTER_RIGHT" editable="false" prefWidth="100.0" text="password" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <Label fx:id="serverNameLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="SERVER NAME">
         <font>
            <Font size="22.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Chat Server Lobby">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <VBox prefWidth="400.0" spacing="5.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
               </padding>
               <children>
                  <Label text="Connected clients:" />
                  <TableView fx:id="tableviewClients" prefHeight="500.0">
                    <columns>
                      <TableColumn fx:id="tablecolumnName" prefWidth="75.0" text="Name" />
                      <TableColumn fx:id="tablecolumnIP" prefWidth="75.0" text="IP-address" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Recent updates:" />
                  <ListView fx:id="listviewUpdates" prefHeight="500.0" prefWidth="400.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <VBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Button fx:id="toChatButton" defaultButton="true" maxWidth="810.0" mnemonicParsing="false" text="Go to Chat Room">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="closeServerButton" maxWidth="810.0" mnemonicParsing="false" text="Close Server">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
